{
  "$id": "https://schema.twoman.dev/ws/profile.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Profile Decision Message",
  "description": "WebSocket profile decision payload",
  "type": "object",
  "required": ["decision", "target_profile"],
  "properties": {
    "decision": {
      "type": "string",
      "description": "The profile decision",
      "enum": ["like", "pass", "super_like"]
    },
    "is_duo": {
      "type": "boolean",
      "description": "Whether this is a duo decision",
      "default": false
    },
    "friend_profile": {
      "type": "integer",
      "description": "Friend profile ID for duo decisions",
      "minimum": 1
    },
    "target_profile": {
      "type": "integer",
      "description": "Target profile ID being decided on",
      "minimum": 1
    },
    "is_standout": {
      "type": "boolean",
      "description": "Whether this is a standout like",
      "default": false
    },
    "stars_cost": {
      "type": "integer",
      "description": "Number of stars required for this standout like",
      "minimum": 1
    }
  },
  "additionalProperties": false
}